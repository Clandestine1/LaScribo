%div#show-container
.posts-wrapper
  %div#no-animation.post
    .post-head
    .image.center-block
      =image_tag @post.image.url(:medium)
    %p.caption
      =@post.caption
    %p.name
      Boss Shauna
    %p.story
      =@post.story  
    %div.text-center.edit-links
  = link_to "Edit Post", edit_post_path(@post)
  |
  = link_to "Delete Post", post_path(@post), method: :delete
  |
  = link_to "Cancel", posts_path